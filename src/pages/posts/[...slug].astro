---
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import path from "node:path";
import Comment from "@components/comment/index.astro";
import License from "@components/misc/License.astro";
import Markdown from "@components/misc/Markdown.astro";
import SharePoster from "@components/misc/SharePoster.svelte";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPostGroups } from "@utils/content-utils";
import {
	getFileDirFromPath,
	getPostUrlBySlug,
} from "@utils/url-utils";
import {
	hasCustomPermalink,
	initPostIdMap,
} from "@utils/permalink-utils";
import { Icon } from "astro-icon/components";
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import { licenseConfig, permalinkConfig, shareConfig } from "src/config";
import ImageWrapper from "../../components/misc/ImageWrapper.astro";
import PostMetadata from "../../components/PostMeta.astro";
import { profileConfig, siteConfig } from "../../config";
import { formatDateToYYYYMMDD } from "../../utils/date-utils";
import Encryptor from "../../components/Encryptor.astro";
import {
	getCanonicalPostSlugFromId,
	getPostVariantLanguageKey,
} from "../../utils/post-variant-utils";

export async function getStaticPaths() {
	const postGroups = await getSortedPostGroups();
	const blogEntries = postGroups.map((group) => group.defaultEntry);

	// 初始化文章 ID 映射（用于 %post_id% 占位符）
	initPostIdMap(blogEntries);

	const paths: {
		params: { slug: string };
		props: {
			entry: CollectionEntry<"posts">;
			variants: CollectionEntry<"posts">[];
		};
	}[] = [];

	for (const group of postGroups) {
		const entry = group.defaultEntry;
		const variants = group.variants;
		// 将 id 转换为 slug（移除扩展名）以匹配路由参数
		const defaultSlug = getCanonicalPostSlugFromId(entry);

		// 如果文章有自定义 permalink，不在 /posts/ 下创建路径
		// 而是通过根目录的 [permalink].astro 处理
		if (hasCustomPermalink(entry)) {
			// 仍然需要在 /posts/ 下创建默认路径以便兼容旧链接
			paths.push({
				params: { slug: defaultSlug },
				props: { entry, variants },
			});
			continue;
		}

		// 如果全局 permalink 功能启用，不在 /posts/ 下创建路径
		// 而是通过根目录的 [permalink].astro 处理
		if (permalinkConfig.enable) {
			// 仍然保留默认 slug 路径以便兼容旧链接
			paths.push({
				params: { slug: defaultSlug },
				props: { entry, variants },
			});
		} else {
			// 全局 permalink 功能未启用
			// 为每篇文章创建默认的 slug 路径
			paths.push({
				params: { slug: defaultSlug },
				props: { entry, variants },
			});

			// 如果文章有 alias，也创建对应的路径
			if (entry.data.alias) {
				// 移除开头的斜杠和结尾的斜杠
				// 同时移除可能的 "posts/" 前缀，避免重复
				let alias = entry.data.alias
					.replace(/^\/+/, "")
					.replace(/\/+$/, "");
				if (alias.startsWith("posts/")) {
					alias = alias.replace(/^posts\//, "");
				}
				paths.push({
					params: { slug: alias },
					props: { entry, variants },
				});
			}
		}
	}

	return paths;
}

const {
	entry,
	variants = [entry],
}: {
	entry: CollectionEntry<"posts">;
	variants?: CollectionEntry<"posts">[];
} = Astro.props;

const renderedVariants = await Promise.all(
	variants.map(async (variantEntry) => {
		const rendered = await render(variantEntry);
		return {
			entry: variantEntry,
			Content: rendered.Content,
			headings: rendered.headings,
			remarkPluginFrontmatter: rendered.remarkPluginFrontmatter,
			langKey: getPostVariantLanguageKey(variantEntry),
			isEncrypted: !!(variantEntry.data.encrypted && variantEntry.data.password),
		};
	}),
);

const activeVariant =
	renderedVariants.find((variant) => variant.entry.id === entry.id) ||
	renderedVariants[0];
const headings = activeVariant.headings;
const hasMultipleVariants = renderedVariants.length > 1;
const hasEncryptedVariant = renderedVariants.some((variant) => variant.isEncrypted);
const enableBrowserLanguageContentSwitch = hasMultipleVariants && !hasEncryptedVariant;
const visibleVariantBlocks = enableBrowserLanguageContentSwitch
	? renderedVariants
	: [activeVariant];

// Process cover image for SharePoster
let posterCoverUrl = entry.data.image;
if (entry.data.image) {
	const isLocal = !(
		entry.data.image.startsWith("/") ||
		entry.data.image.startsWith("http") ||
		entry.data.image.startsWith("https") ||
		entry.data.image.startsWith("data:")
	);
	if (isLocal) {
		const basePath = getFileDirFromPath(entry.filePath || "");
		const files = import.meta.glob<ImageMetadata>("../../**", {
			import: "default",
		});
		let normalizedPath = path
			.normalize(path.join("../../", basePath, entry.data.image))
			.replace(/\\/g, "/");
		const file = files[normalizedPath];
		if (file) {
			const img = await file();
			posterCoverUrl = img.src;
		}
	} else if (entry.data.image.startsWith("http")) {
		try {
			const response = await fetch(entry.data.image);
			const arrayBuffer = await response.arrayBuffer();
			const base64 = Buffer.from(arrayBuffer).toString("base64");
			const contentType = response.headers.get("content-type") || "image/jpeg";
			posterCoverUrl = `data:${contentType};base64,${base64}`;
		} catch {
			posterCoverUrl = entry.data.image;
		}
	}
}

// Process avatar image for SharePoster
let posterAvatarUrl = profileConfig.avatar;
if (profileConfig.avatar) {
	const isLocal = !(
		profileConfig.avatar.startsWith("/") ||
		profileConfig.avatar.startsWith("http") ||
		profileConfig.avatar.startsWith("https") ||
		profileConfig.avatar.startsWith("data:")
	);
	if (isLocal) {
		const files = import.meta.glob<ImageMetadata>("../../**", {
			import: "default",
		});
		let normalizedPath = path
			.normalize(path.join("../../", profileConfig.avatar))
			.replace(/\\/g, "/");
		const file = files[normalizedPath];
		if (file) {
			const img = await file();
			posterAvatarUrl = img.src;
		}
	}
}

// 判断是否为加密文章
let isEncrypted = activeVariant.isEncrypted;

dayjs.extend(utc);
const lastModified = dayjs(entry.data.updated || entry.data.published)
	.utc()
	.format("YYYY-MM-DDTHH:mm:ss");

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	headline: entry.data.title,
	description: entry.data.description || entry.data.title,
	keywords: entry.data.tags,
	author: {
		"@type": "Person",
		name: profileConfig.name,
		url: Astro.site,
	},
	datePublished: formatDateToYYYYMMDD(entry.data.published),
	inLanguage: entry.data.lang
		? entry.data.lang.replace("_", "-")
		: siteConfig.lang.replace("_", "-"),
	// TODO include cover image here
};
---

<MainGridLayout
    banner={entry.data.image}
    title={entry.data.title}
    description={entry.data.description}
    lang={entry.data.lang}
    setOGTypeArticle={true}
    postSlug={getCanonicalPostSlugFromId(entry)}
    headings={headings}
>
    <script is:inline slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    <!-- 引入右侧边栏布局管理器 -->
  <script>
    import('../../scripts/right-sidebar-layout.js');
  </script>
    <div
        class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative mb-4"
    >
	        <div
	            id="post-container"
	            data-post-variant-switch-enabled={enableBrowserLanguageContentSwitch ? "true" : "false"}
	            data-post-variant-site-lang={siteConfig.lang}
	            class:list={[
	                "card-base z-10 px-6 md:px-9 pt-6 pb-4 relative w-full ",
	                {},
	            ]}
	        >
	            <div data-post-variant-sections>
	            {
	                visibleVariantBlocks.map((variant, variantIndex) => {
                    const variantEntry = variant.entry;
                    const VariantContent = variant.Content;
                    const isDefaultVariant = variantEntry.id === activeVariant.entry.id;
                    const isHiddenVariant =
                        enableBrowserLanguageContentSwitch && !isDefaultVariant;

                    return (
                        <section
                            data-post-variant-section="true"
                            data-post-variant-lang={variant.langKey}
                            data-pagefind-ignore={isDefaultVariant ? undefined : true}
                            hidden={isHiddenVariant}
                        >
                            <!-- word count and reading time -->
                            <div
                                class="flex flex-row text-black/30 dark:text-white/30 gap-5 mb-3 transition onload-animation"
                            >
                                <div class="flex flex-row items-center">
                                    <div
                                        class="transition h-6 w-6 rounded-md bg-black/5 dark:bg-white/10 text-black/50 dark:text-white/50 flex items-center justify-center mr-2"
                                    >
                                        <Icon name="material-symbols:notes-rounded" is:inline />
                                    </div>
                                    <div class="text-sm">
                                        {variant.remarkPluginFrontmatter.words}
                                        {" " + i18n(I18nKey.wordsCount)}
                                    </div>
                                </div>
                                <div class="flex flex-row items-center">
                                    <div
                                        class="transition h-6 w-6 rounded-md bg-black/5 dark:bg-white/10 text-black/50 dark:text-white/50 flex items-center justify-center mr-2"
                                    >
                                        <Icon
                                            name="material-symbols:schedule-outline-rounded"
                                            is:inline
                                        />
                                    </div>
                                    <div class="text-sm">
                                        {variant.remarkPluginFrontmatter.minutes}
                                        {
                                            " " +
                                                i18n(
                                                    variant.remarkPluginFrontmatter.minutes === 1
                                                        ? I18nKey.minuteCount
                                                        : I18nKey.minutesCount,
                                                )
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- title -->
                            <div class="relative onload-animation">
                                <div
                                    data-pagefind-body
                                    data-pagefind-weight="10"
                                    data-pagefind-meta="title"
                                    class="transition w-full block font-bold mb-3
                                    text-3xl md:text-[2.25rem]/[2.75rem]
                                    text-black/90 dark:text-white/90
                                    md:before:w-1 before:h-5 before:rounded-md before:bg-[var(--primary)]
                                    before:absolute before:top-[0.75rem] before:left-[-1.125rem]"
                                >
                                    {variantEntry.data.title}
                                </div>
                            </div>

                            <!-- metadata -->
                            <div class="onload-animation">
                                <PostMetadata
                                    className="mb-5"
                                    published={variantEntry.data.published}
                                    updated={variantEntry.data.updated}
                                    tags={variantEntry.data.tags}
                                    category={variantEntry.data.category || undefined}
                                    id={getCanonicalPostSlugFromId(entry)}
                                    enablePageViewsScript={isDefaultVariant}
                                />
                                {
                                    (!variantEntry.data.image || (variantEntry.data.image && !siteConfig.showCoverInContent)) && (
                                        <div class="mt-4 border-[var(--line-divider)] border-dashed border-b-[1px] mb-5" />
                                    )
                                }
                            </div>

                            <!-- always show cover as long as it has one -->
                            {
                                variantEntry.data.image && siteConfig.showCoverInContent && (
                                    <>
                                        <div class="mt-4" />
                                        <ImageWrapper
                                            id={`post-cover-${variant.langKey || "default"}-${variantIndex}`}
                                            src={variantEntry.data.image}
                                            basePath={getFileDirFromPath(variantEntry.filePath || '')}
                                            class="mb-8 rounded-xl banner-container onload-animation"
                                        />
                                    </>
                                )
                            }

                            {
                                variant.isEncrypted ? (
                                    <Encryptor password={variantEntry.data.password}>
                                         <Markdown class="mb-6 markdown-content onload-animation">
                                            <VariantContent />
                                        </Markdown>
                                    </Encryptor>
                                ) : (
                                    <Markdown class="mb-6 markdown-content onload-animation">
                                        <VariantContent />
                                    </Markdown>
                                )
                            }
                        </section>
                    );
                })
            }
            </div>

            {shareConfig.enable && (
                <div id="share-component" class:list={["p-6 bg-[var(--license-block-bg)] rounded-xl mb-6 onload-animation", { "encrypted-hidden": isEncrypted }]}>
                    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                        <div class="flex items-center gap-3 flex-1">
                            <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-[var(--enter-btn-bg)]">
                                <Icon
                                    name="material-symbols:share"
                                    class="text-3xl text-[var(--primary)]"
                                />
                            </div>
                            <div class="flex flex-col gap-1">
                                <div class="text-[1.0rem] leading-tight text-black/75 dark:text-white/75">
                                    {i18n(I18nKey.shareOnSocial)}
                                </div>
                                <p class="text-[0.8rem] leading-tight text-black/75 dark:text-white/75">
                                    {i18n(I18nKey.shareOnSocialDescription)}
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <SharePoster
                                client:load
                                title={entry.data.title}
                                author={entry.data.author || profileConfig.name}
                                description={entry.data.description || ""}
                                pubDate={formatDateToYYYYMMDD(entry.data.published)}
                                coverImage={posterCoverUrl}
                                url={Astro.url.toString()}
                                siteTitle={siteConfig.title}
                                avatar={posterAvatarUrl}
                            />
                        </div>
                    </div>
                </div>
            )}

            {licenseConfig.enable && (
                <div id="license-component" class:list={["encrypted-hidden-wrapper", { "encrypted-hidden": isEncrypted }]}>
                    <License
                    title={entry.data.title}
                    id={entry.id}
                    pubDate={entry.data.published}
                    author={entry.data.author}
                    sourceLink={entry.data.sourceLink}
                    licenseName={entry.data.licenseName}
                    licenseUrl={entry.data.licenseUrl}
                    class="mb-6 rounded-xl license-container onload-animation"
                />
                </div>
            )}
        </div>
    </div>

    <script is:inline>
        function normalizePostVariantLang(raw) {
            if (!raw) return "";
            const normalized = String(raw).trim().toLowerCase().replace(/-/g, "_");
            if (normalized === "jp" || normalized === "ja_jp") return "ja";
            if (normalized === "en_us" || normalized === "en_gb" || normalized === "en_au") return "en";
            if (normalized === "cn" || normalized === "zh_hans" || normalized === "zh_sg") return "zh_cn";
            if (normalized === "tw" || normalized === "zh_hant" || normalized === "zh_hk" || normalized === "zh_mo") return "zh_tw";
            return normalized;
        }

        function getBrowserVariantLangCandidates() {
            const rawList =
                Array.isArray(navigator.languages) && navigator.languages.length > 0
                    ? navigator.languages
                    : navigator.language
                        ? [navigator.language]
                        : [];

            const result = [];
            for (const raw of rawList) {
                const normalized = normalizePostVariantLang(raw);
                if (!normalized) continue;
                if (!result.includes(normalized)) result.push(normalized);
                const base = normalized.split("_")[0];
                if (base && !result.includes(base)) result.push(base);
            }
            return result;
        }

	        function refreshArticleTOC() {
	            try {
	                const tocElement = document.querySelector("table-of-contents");
                if (tocElement && typeof tocElement.regenerateTOC === "function") {
                    tocElement.regenerateTOC();
                    if (typeof tocElement.init === "function") {
                        tocElement.init();
                    }
                }
                window.dispatchEvent(new Event("resize"));
            } catch (error) {
	                console.warn("Failed to refresh TOC after language switch:", error);
	            }
	        }

	        const POST_VARIANT_LANG_STORAGE_KEY = "mizuki:postVariantLanguage";

	        function getStoredPostVariantLangPreference() {
	            try {
	                return normalizePostVariantLang(
	                    localStorage.getItem(POST_VARIANT_LANG_STORAGE_KEY),
	                );
	            } catch {
	                return "";
	            }
	        }

	        function setStoredPostVariantLangPreference(lang) {
	            try {
	                const normalized = normalizePostVariantLang(lang);
	                if (normalized) {
	                    localStorage.setItem(POST_VARIANT_LANG_STORAGE_KEY, normalized);
	                } else {
	                    localStorage.removeItem(POST_VARIANT_LANG_STORAGE_KEY);
	                }
	            } catch {
	                // Ignore localStorage errors (e.g. privacy mode)
	            }
	        }

	        function getPostVariantFloatingControlElements() {
	            const root = document.querySelector("[data-post-variant-floating-root]");
	            if (!root) return null;
	            return {
	                root,
	                select: root.querySelector("[data-post-variant-floating-select]"),
	                currentLabel: root.querySelector("[data-post-variant-current-label]"),
	            };
	        }

	        function setPostVariantFloatingControlVisible(visible) {
	            const elements = getPostVariantFloatingControlElements();
	            if (!elements?.root) return;
	            elements.root.classList.toggle("hide", !visible);
	            elements.root.setAttribute("aria-hidden", visible ? "false" : "true");
	            if (!visible && typeof window._mizukiPostVariantFloatingPanelClose === "function") {
	                window._mizukiPostVariantFloatingPanelClose();
	            }
	            if (elements.select) {
	                elements.select.disabled = !visible;
	            }
	        }

	        function getPostVariantLanguageDisplayName(rawLang) {
	            const normalized = normalizePostVariantLang(rawLang);
	            const names = {
	                zh_cn: "简体中文",
	                zh_tw: "繁體中文",
	                en: "English",
	                ja: "日本語",
	                ko: "한국어",
	                es: "Español",
	                th: "ไทย",
	                vi: "Tiếng Việt",
	                tr: "Türkçe",
	                id: "Bahasa Indonesia",
	                fr: "Français",
	                de: "Deutsch",
	                ru: "Русский",
	                ar: "العربية",
	            };
	            return names[normalized] || normalized || "default";
	        }

	        function getPostVariantOptionLabel(lang, siteLang) {
	            const floatingRoot = document.querySelector(
	                "[data-post-variant-floating-root]",
	            );
	            const i18nDefaultLabel =
	                floatingRoot?.dataset?.postVariantI18nDefaultLabel || "Default";
	            const normalized = normalizePostVariantLang(lang) || "default";
	            if (normalized === "default") {
	                const fallbackLangLabel =
	                    getPostVariantLanguageDisplayName(siteLang) || siteLang || "default";
	                return `${i18nDefaultLabel} (${fallbackLangLabel})`;
	            }
	            return getPostVariantLanguageDisplayName(normalized);
	        }

	        function ensurePostVariantFloatingControl(container, sections) {
	            const elements = getPostVariantFloatingControlElements();
	            if (!elements?.select) return null;

	            const siteLang = container?.dataset?.postVariantSiteLang || "";
	            const options = [];
	            const seen = new Set();

	            for (const section of sections) {
	                const rawLang = section.getAttribute("data-post-variant-lang") || "default";
	                const normalized = normalizePostVariantLang(rawLang) || "default";
	                if (seen.has(normalized)) continue;
	                seen.add(normalized);
	                options.push({
	                    value: rawLang,
	                    normalized,
	                    label: getPostVariantOptionLabel(rawLang, siteLang),
	                });
	            }

	            const signature = options
	                .map((option) => `${option.normalized}:${option.value}`)
	                .join("|");

	            if (elements.select.dataset.variantSignature !== signature) {
	                elements.select.innerHTML = "";
	                for (const option of options) {
	                    const optionEl = document.createElement("option");
	                    optionEl.value = option.value;
	                    optionEl.textContent = option.label;
	                    elements.select.appendChild(optionEl);
	                }
	                elements.select.dataset.variantSignature = signature;
	            }

	            elements.select.onchange = (event) => {
	                const target = event.currentTarget;
	                applyPostVariantSelection(target?.value || "", {
	                    persist: true,
	                    useStoredPreference: false,
	                });
	            };

	            setPostVariantFloatingControlVisible(options.length > 1);
	            return elements;
	        }

	        function syncPostVariantFloatingControl(container, lang) {
	            const elements = getPostVariantFloatingControlElements();
	            if (!elements?.select) return;

	            const normalizedTarget = normalizePostVariantLang(lang) || "default";
	            const options = Array.from(elements.select.options || []);
	            const matchedOption = options.find(
	                (option) =>
	                    (normalizePostVariantLang(option.value) || "default") ===
	                    normalizedTarget,
	            );

	            if (matchedOption && elements.select.value !== matchedOption.value) {
	                elements.select.value = matchedOption.value;
	            }

	            const displayLabel =
	                (matchedOption && matchedOption.textContent?.trim()) ||
	                getPostVariantOptionLabel(lang, container?.dataset?.postVariantSiteLang || "");
	            if (elements.currentLabel) {
	                elements.currentLabel.textContent = displayLabel;
	            }
	        }

	        function applyPostVariantSelection(preferredLang, options) {
	            const container = document.getElementById("post-container");
	            if (!container) {
	                const hasPreviewVariantCards = !!document.querySelector(
	                    "#post-list-container [data-post-preview-variants]",
	                );
	                if (!hasPreviewVariantCards) {
	                    setPostVariantFloatingControlVisible(false);
	                }
	                return;
	            }
	            if (container.dataset.postVariantSwitchEnabled !== "true") {
	                setPostVariantFloatingControlVisible(false);
	                return;
	            }

            const sectionWrapper = container.querySelector("[data-post-variant-sections]");
            if (!sectionWrapper) return;

            if (!sectionWrapper._allVariantSections) {
                sectionWrapper._allVariantSections = Array.from(
                    sectionWrapper.querySelectorAll("[data-post-variant-section]"),
                );
            }

	            const sections = sectionWrapper._allVariantSections;
	            if (sections.length <= 1) {
	                setPostVariantFloatingControlVisible(false);
	                return;
	            }

	            ensurePostVariantFloatingControl(container, sections);

	            const byLang = new Map();
	            let defaultSection = null;

            for (const section of sections) {
                const langKey = normalizePostVariantLang(
                    section.getAttribute("data-post-variant-lang"),
                ) || "default";

                if (!byLang.has(langKey)) byLang.set(langKey, section);
                const base = langKey.split("_")[0];
	                if (base && !byLang.has(base)) byLang.set(base, section);
	                if (langKey === "default" && !defaultSection) defaultSection = section;
	            }

	            const normalizedPreferred = normalizePostVariantLang(preferredLang);
	            const shouldUseStoredPreference = options?.useStoredPreference !== false;
	            const storedPreference = shouldUseStoredPreference
	                ? getStoredPostVariantLangPreference()
	                : "";
	            const candidates = [
	                normalizedPreferred,
	                storedPreference,
	                ...getBrowserVariantLangCandidates(),
	                normalizePostVariantLang(container.dataset.postVariantSiteLang),
	                "default",
                "en",
            ].filter(Boolean);

            let target = null;
            for (const candidate of candidates) {
                const match = byLang.get(candidate);
                if (match) {
                    target = match;
                    break;
                }
            }
            if (!target) target = defaultSection || sections[0];
            if (!target) return;

            const currentVisible = sections.find(
                (section) => section.parentElement === sectionWrapper && !section.hidden,
            );
            const changed = currentVisible !== target;

            for (const section of sections) {
                if (section === target) continue;
                section.hidden = true;
                if (section.parentElement === sectionWrapper) {
                    sectionWrapper.removeChild(section);
                }
            }

	            if (target.parentElement !== sectionWrapper) {
	                sectionWrapper.appendChild(target);
	            }
	            target.hidden = false;
	            const targetLang = target.getAttribute("data-post-variant-lang") || "default";
	            syncPostVariantFloatingControl(container, targetLang);

	            if (options?.persist) {
	                setStoredPostVariantLangPreference(targetLang);
	            }

	            if (changed) {
	                requestAnimationFrame(refreshArticleTOC);
                window.dispatchEvent(
                    new CustomEvent("mizuki:post-language-switched", {
                        detail: {
                            lang: target.getAttribute("data-post-variant-lang") || "default",
                        },
                    }),
	                );
	            }
	        }

	        function applyPostVariantByBrowserLanguage() {
	            applyPostVariantSelection("", { useStoredPreference: true });
	        }

	        document.addEventListener("DOMContentLoaded", applyPostVariantByBrowserLanguage);
	        if (document.readyState !== "loading") {
            applyPostVariantByBrowserLanguage();
        }

        function scheduleApplyPostVariantByBrowserLanguage() {
            requestAnimationFrame(applyPostVariantByBrowserLanguage);
        }

        function setupPostVariantAstroNavigationListeners() {
            if (window._mizukiPostVariantAstroNavBound) return;
            document.addEventListener(
                "astro:page-load",
                scheduleApplyPostVariantByBrowserLanguage,
            );
            document.addEventListener(
                "astro:after-swap",
                scheduleApplyPostVariantByBrowserLanguage,
            );
            window._mizukiPostVariantAstroNavBound = true;
        }
        setupPostVariantAstroNavigationListeners();

        function setupPostVariantSwupListener() {
            if (window._mizukiPostVariantSwupBound) return;

            function tryBind() {
                if (window.swup && window.swup.hooks) {
                    window.swup.hooks.on(
                        "content:replace",
                        scheduleApplyPostVariantByBrowserLanguage,
                    );
                    window.swup.hooks.on(
                        "page:view",
                        scheduleApplyPostVariantByBrowserLanguage,
                    );
                    window._mizukiPostVariantSwupBound = true;
                    return true;
                }
                return false;
            }

            if (!tryBind()) {
                let retryCount = 0;
                const timer = setInterval(() => {
                    if (tryBind() || ++retryCount >= 10) {
                        clearInterval(timer);
                    }
                }, 100);
            }
        }
        setTimeout(setupPostVariantSwupListener, 200);
    </script>

